{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "config",
      "type": "shell",
      "command": "sh config.sh",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cd build ; ninja",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["config"]
    }
  ]
}
